<resources>

    <style name="AppTheme" parent="AppTheme.Base" />

    <!--use Theme.AppCompat.Light.NoActionBar to prevent crash with support AppCompatActivity  -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!--You have to replace android for support -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="elevation">0dp</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!--<item name="android:buttonStyle">@style/BrandButtonStyle</item>-->

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="BrandButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/button</item>
        <!--<item name="colorControlHighlight">@color/button</item>-->
        <!--<item name="android:textColor">@android:color/white</item>-->
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">

        <item name="android:background">@color/primary</item>

        <!--You have to replace android for support -->
        <item name="background">@color/primary_dark</item>

    </style>

</resources>
